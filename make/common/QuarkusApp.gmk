APP ?= code-with-quarkus

arch_mvn += JAVA_HOME=$(JAVA_HOME)
arch_mvn += /opt/maven/bin/mvn

include ../make/common/QuarkusBase.gmk
include ../make/common/QuarkusProd.gmk

$(pom):
> $(arch_mvn) io.quarkus.platform:quarkus-maven-plugin:$(QUARKUS_VERSION):create \
>   -DprojectGroupId=org.acme \
>   -DprojectArtifactId=$(APP) \
>   -Dextensions='$(extensions)'
