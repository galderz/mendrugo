#test_quarkus_args += $(HOME)/opt/maven/bin/mvnDebug
test_quarkus_args += ./mvnw
test_quarkus_args += -Dnative
test_quarkus_args += -Dnative.surefire.skip
test_quarkus_args += -Dformat.skip
test_quarkus_args += -Dno-descriptor-tests
test_quarkus_args += -DskipDocs
test_quarkus_args += --fail-at-end
test_quarkus_args += -Dquarkus.native.container-build=false
#test_quarkus_args += -Dquarkus.native.additional-build-args=-H:+PrintClassInitialization
#test_quarkus_args += -Dquarkus.native.additional-build-args=--debug-attach=*:8000
#test_quarkus_args += -Dquarkus.native.additional-build-args=--trace-object-instantiation=jdk.nio.zipfs.ZipFileSystemProvider
#test_quarkus_args += -Dquarkus.native.builder-image=quay.io/quarkus/ubi9-quarkus-mandrel-builder-image:jdk-25
#test_quarkus_args += -Dquarkus.native.container-build=true
test_quarkus_args += -f
test_quarkus_args += integration-tests/$(TEST_MODULE)

test-quarkus: $(java)
test-quarkus: $(quarkus_awt_jar)
test-quarkus: $(quarkus_core_jar)
test-quarkus: $(quarkus_security_jar)
test-quarkus: $(quarkus_schema_registry_jar)
test-quarkus: $(quarkus_spring_data_jpa_jar)
> cd $(QUARKUS_HOME)
> JAVA_HOME=$(GRAALVM_HOME) $(test_quarkus_args) clean install
.PHONY: test-quarkus

#test_mandrel_args += $(HOME)/opt/maven/bin/mvnDebug
test_mandrel_args += $(HOME)/opt/maven/bin/mvn
#test_mandrel_args += -Dquarkus.native.additional-build-args=-H:+PrintClassInitialization
#test_mandrel_args += -Dquarkus.native.additional-build-args=--debug-attach=*:8000
#test_mandrel_args += -Dquarkus.native.additional-build-args=--trace-object-instantiation=jdk.nio.zipfs.ZipFileSystemProvider
test_mandrel_args += -Dquarkus.version=999-SNAPSHOT
test_mandrel_args += -Ptestsuite

test-mandrel: $(java)
test-mandrel: $(quarkus_awt_jar)
test-mandrel: $(quarkus_core_jar)
test-mandrel: $(quarkus_security_jar)
test-mandrel: $(quarkus_spring_data_jpa_jar)
> cd $(MANDREL_IT_HOME)
> JAVA_HOME=$(GRAALVM_HOME) $(test_mandrel_args) clean install
.PHONY: test-mandrel

test-perfcheck: $(java)
test-perfcheck: $(quarkus_awt_jar)
test-perfcheck: $(quarkus_core_jar)
test-perfcheck: $(quarkus_security_jar)
test-perfcheck: $(quarkus_spring_data_jpa_jar)
> cd $(MANDREL_IT_HOME)
> JAVA_HOME=$(GRAALVM_HOME) $(test_mandrel_args) -DexcludeTags=all -DincludeTags=perfcheck clean install
.PHONY: test-perfcheck

