include $(TOPDIR)/make/common/QuarkusBase.gmk
include $(TOPDIR)/make/common/QuarkusProd.gmk

ifdef TMPDIR
  tmp_dir = $(TMPDIR)
else
  tmp_dir = /tmp
endif

$(pom):
> pushd $(tmp_dir)
> rm -drf quarkus-quickstarts || true
> git clone https://github.com/quarkusio/quarkus-quickstarts
> cd quarkus-quickstarts
> git checkout $(QUICKSTARTS_BRANCH)
> popd
> cp -r $(tmp_dir)/quarkus-quickstarts/$(APP) .
